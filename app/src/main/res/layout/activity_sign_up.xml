<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <TextView
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGNUP"
        android:textSize="27dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_signup_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/signup"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="50dp"/>

    <EditText
        android:id="@+id/et_singup_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="아이디를 입력하세요"
        android:textColorHint="#a3a3a3"
        app:layout_constraintTop_toBottomOf="@+id/tv_signup_id"
        app:layout_constraintStart_toStartOf="@+id/tv_signup_id"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="50dp"/>

    <TextView
        android:id="@+id/tv_signup_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/et_singup_id"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@id/tv_signup_id"/>

    <EditText
        android:id="@+id/et_signup_pw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="비밀번호를 입력하세요"
        android:inputType="textPassword"
        android:textColorHint="#a3a3a3"
        app:layout_constraintTop_toBottomOf="@id/tv_signup_pw"
        app:layout_constraintStart_toStartOf="@id/tv_signup_pw"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="50dp"/>

    <TextView
        android:id="@+id/tv_signup_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/et_signup_pw"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@id/tv_signup_pw"/>

    <EditText
        android:id="@+id/et_signup_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="이름을 입력하세요"
        android:textColorHint="#a3a3a3"
        app:layout_constraintTop_toBottomOf="@id/tv_signup_name"
        app:layout_constraintStart_toStartOf="@id/tv_signup_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="50dp"/>

    <TextView
        android:id="@+id/tv_signup_mbti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MBTI"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/et_signup_name"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@id/tv_signup_name"/>

    <EditText
        android:id="@+id/et_signup_mbti"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="MBTI를 입력하세요"
        android:textColorHint="#a3a3a3"
        app:layout_constraintTop_toBottomOf="@id/tv_signup_mbti"
        app:layout_constraintStart_toStartOf="@id/tv_signup_mbti"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="50dp"/>

    <Button
        android:id="@+id/button_signup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="회원가입 완료"
        app:layout_constraintTop_toBottomOf="@id/et_signup_mbti"
        app:layout_constraintStart_toStartOf="@id/et_signup_mbti"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/button_go_back"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="뒤로가기"
        app:layout_constraintTop_toBottomOf="@id/button_signup"
        app:layout_constraintStart_toStartOf="@id/button_signup"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="50dp"/>








</androidx.constraintlayout.widget.ConstraintLayout>